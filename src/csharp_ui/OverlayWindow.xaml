<Window x:Class="TradeSensei.UI.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay" WindowStyle="None" AllowsTransparency="True" Background="#00FFFFFF" ShowInTaskbar="False" Topmost="True">
    <Border CornerRadius="18" BorderBrush="{StaticResource AccentBrush}" BorderThickness="2" Background="#10FFFFFF" Effect="{DynamicResource {x:Static SystemParameters.DropShadowKey}}">
        <Grid>
            <Canvas Name="OverlayCanvas" IsHitTestVisible="False">
                <!-- Overlay drawings will be rendered here -->
            </Canvas>
            <Image Source="logo.svg" Width="64" Height="64" Opacity="0.18" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,12,12" IsHitTestVisible="False" />
        </Grid>
    </Border>
</Window>
