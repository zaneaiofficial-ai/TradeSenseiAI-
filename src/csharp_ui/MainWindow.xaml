<Window x:Class="TradeSensei.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TradeSensei AI" Height="720" Width="1280">
    <Grid Margin="0">
        <Border Background="{StaticResource SecondaryBrush}" CornerRadius="16" Padding="32" Margin="60,60,60,60" BorderBrush="{StaticResource AccentBrush}" BorderThickness="2" Effect="{DynamicResource {x:Static SystemParameters.DropShadowKey}}">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="520">
                <Image Source="logo.svg" Width="64" Height="64" Margin="0,0,0,8" HorizontalAlignment="Center" />
                <TextBlock Text="TradeSensei AI" FontSize="32" FontWeight="Bold" Margin="0,0,0,4" HorizontalAlignment="Center" />
                <TextBlock Text="Your Futuristic Trading Mentor" FontSize="16" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,18" HorizontalAlignment="Center" />
                <Border Background="{StaticResource PrimaryBrush}" CornerRadius="10" Padding="18" Margin="0,0,0,18">
                    <StackPanel Orientation="Vertical">
                        <WrapPanel Margin="0,0,0,8" VerticalAlignment="Top">
                            <Button Name="BtnOpenOverlay" Content="Open Overlay" Width="120" Height="32" Margin="0,0,8,0" Click="BtnOpenOverlay_Click" />
                            <Button Name="BtnStartStream" Content="Start Streaming" Width="120" Height="32" Margin="0,0,8,0" Click="BtnStartStream_Click" />
                            <Button Name="BtnStopStream" Content="Stop Streaming" Width="120" Height="32" Margin="0,0,8,0" Click="BtnStopStream_Click" />
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="FPS:" VerticalAlignment="Center" Margin="8,0,4,0" />
                                <TextBox Name="TxtFps" Width="40" Text="2" />
                            </StackPanel>
                            <Button Name="BtnSettings" Content="Settings" Width="100" Height="32" Margin="8,0,0,0" Click="BtnSettings_Click" />
                            <Button Name="BtnWebhookSimulator" Content="Dev Simulator" Width="120" Height="32" Margin="8,0,0,0" Click="BtnWebhookSimulator_Click" />
                        </WrapPanel>
                        <WrapPanel Margin="0,0,0,8" VerticalAlignment="Top">
                            <Button Name="BtnLogin" Content="Login" Width="100" Height="32" Margin="0,0,8,0" Click="BtnLogin_Click" />
                            <Button Name="BtnCheckout" Content="Subscribe / Checkout" Width="160" Height="32" Margin="8,0,0,0" Click="BtnCheckout_Click" />
                            <Button Name="BtnVoiceChat" Content="ðŸŽ¤ Voice Chat" Width="120" Height="32" Margin="8,0,0,0" Click="BtnVoiceChat_Click" />
                            <Button Name="BtnPriceAlerts" Content="ðŸ“Š Price Alerts" Width="120" Height="32" Margin="8,0,0,0" Click="BtnPriceAlerts_Click" />
                            <Button Name="BtnPortfolio" Content="ðŸ’¼ Portfolio" Width="100" Height="32" Margin="8,0,0,0" Click="BtnPortfolio_Click" />
                        </WrapPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,4">
                            <TextBlock Name="TxtLoginStatus" Text="Not signed in" Margin="0,0,8,0" />
                            <Border CornerRadius="6" Background="#22000000" Padding="6" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Ellipse Name="EltSubBadge" Width="12" Height="12" Fill="{StaticResource FreeBrush}" VerticalAlignment="Center" Margin="0,0,8,0" />
                                    <TextBlock Name="TxtSubStatus" Text="Subscription: Free" Margin="0,0,8,0" />
                                    <Button Name="BtnRefreshSub" Content="Refresh" Width="80" Height="24" Click="BtnRefreshSub_Click" />
                                </StackPanel>
                            </Border>
                            <CheckBox Name="ChkAutoRefresh" Content="Auto-refresh" IsChecked="True" Margin="8,0,0,0" VerticalAlignment="Center" />
                            <Button Name="BtnManageSub" Content="Manage" Width="80" Height="24" Margin="8,0,0,0" Click="BtnManageSub_Click" />
                            <Button Name="BtnStreamObs" Content="Stream to OBS" Width="120" Height="24" Margin="8,0,0,0" Click="BtnStreamObs_Click" />
                        </StackPanel>
                        <TextBlock Text="Overlay status and controls." />
                        <Border Background="#11111100" CornerRadius="10" Padding="10" Margin="0,8,0,0">
                            <StackPanel>
                                <TextBlock Text="Webcam Vision" FontWeight="Bold" Margin="0,0,0,6" />
                                <WrapPanel>
                                    <Button Name="BtnStartWebcam" Content="Start Webcam" Width="120" Height="28" Margin="0,0,8,0" Click="BtnStartWebcam_Click" />
                                    <Button Name="BtnStopWebcam" Content="Stop Webcam" Width="120" Height="28" Margin="0,0,8,0" Click="BtnStopWebcam_Click" />
                                    <TextBlock Name="TxtWebcamStatus" Text="Idle" VerticalAlignment="Center" Margin="0,0,0,0" />
                                </WrapPanel>
                                <TextBlock Name="TxtWebcamAttention" Text="Attention: N/A" Margin="0,6,0,0" />
                                <ItemsControl Name="LstWebcamFaces">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock FontSize="12" Text="{Binding}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
                <TextBlock Text="Â© 2025 Zane AI. All rights reserved." FontSize="12" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" Margin="0,12,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
