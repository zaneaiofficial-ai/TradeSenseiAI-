<Window x:Class="TradeSensei.UI.PriceAlertsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Price Alerts" Height="600" Width="800" WindowStartupLocation="CenterOwner">
    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="12" Padding="16" Margin="8">
        <StackPanel Orientation="Vertical" Margin="0">
            <TextBlock Text="Price Alerts" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,12" />
            
            <!-- Create Alert Section -->
            <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                <StackPanel Orientation="Vertical" Margin="0">
                    <TextBlock Text="Create New Alert" FontSize="14" FontWeight="Bold" Margin="0,0,0,8" />
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Symbol:" VerticalAlignment="Center" />
                        <TextBox Name="TxtSymbol" Width="80" Padding="8" Background="#22FFFFFF" Foreground="White" Margin="0,0,8,0" />
                        
                        <TextBlock Text="Price:" VerticalAlignment="Center" Margin="16,0,0,0" />
                        <TextBox Name="TxtPrice" Width="100" Padding="8" Background="#22FFFFFF" Foreground="White" Margin="0,0,8,0" />
                        
                        <TextBlock Text="When:" VerticalAlignment="Center" Margin="16,0,0,0" />
                        <ComboBox Name="CmbCondition" Width="100" Padding="8" Margin="0,0,8,0">
                            <ComboBoxItem Content="Above" />
                            <ComboBoxItem Content="Below" />
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Notify via:" VerticalAlignment="Center" />
                        <ComboBox Name="CmbNotificationType" Width="100" Padding="8" Margin="0,0,16,0">
                            <ComboBoxItem Content="App" />
                            <ComboBoxItem Content="Email" />
                            <ComboBoxItem Content="SMS" />
                        </ComboBox>
                        
                        <Button Name="BtnCreateAlert" Content="Create Alert" Width="120" Height="32" Click="BtnCreateAlert_Click" 
                                Background="{StaticResource PrimaryBrush}" Foreground="White" Cursor="Hand" />
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Active Alerts -->
            <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                <StackPanel Orientation="Vertical" Margin="0">
                    <TextBlock Text="Your Alerts" FontSize="14" FontWeight="Bold" Margin="0,0,0,8" />
                    <ListBox Name="AlertsListBox" Height="120" Background="#11FFFFFF" Foreground="White" Margin="0,0,0,8" />
                    <Button Name="BtnDeleteAlert" Content="Delete Selected" Width="120" Height="28" Click="BtnDeleteAlert_Click" 
                            Background="#DD5555" Foreground="White" Cursor="Hand" />
                </StackPanel>
            </Border>
            
            <!-- Price Monitor -->
            <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                <StackPanel Orientation="Vertical" Margin="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Current Prices" FontSize="14" FontWeight="Bold" Margin="0,0,8,0" />
                        <Button Name="BtnRefreshPrices" Content="ðŸ”„ Refresh" Width="100" Height="28" Click="BtnRefreshPrices_Click" 
                                Background="{StaticResource PrimaryBrush}" Foreground="White" Cursor="Hand" />
                    </StackPanel>
                    <ListBox Name="PricesListBox" Height="100" Background="#11FFFFFF" Foreground="White" />
                </StackPanel>
            </Border>
            
            <Button Name="BtnClose" Content="Close" Width="100" Height="32" Click="BtnClose_Click" Margin="0,12,0,0"
                    Background="{StaticResource PrimaryBrush}" Foreground="White" Cursor="Hand" />
        </StackPanel>
    </Border>
</Window>
