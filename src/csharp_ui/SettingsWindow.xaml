<Window x:Class="TradeSensei.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="320" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="12" Padding="16" Margin="8">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,12" />

            <TextBlock Text="Auto-Refresh Interval (seconds):" Margin="0,0,0,2" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBox Name="TxtInterval" Height="28" Width="100" />
                <TextBlock Text="(min: 5, default: 30)" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#FF888888" />
            </StackPanel>

            <CheckBox Name="ChkAutoStartPolling" Content="Enable auto-polling on startup" IsChecked="True" Margin="0,0,0,12" />

            <TextBlock Text="Default Tier:" Margin="0,0,0,2" />
            <ComboBox Name="CmbDefaultTier" Height="28" Margin="0,0,0,12">
                <ComboBoxItem IsSelected="True">free</ComboBoxItem>
                <ComboBoxItem>pro</ComboBoxItem>
                <ComboBoxItem>master</ComboBoxItem>
            </ComboBox>

            <CheckBox Name="ChkEnableDev" Content="Enable Dev Features (Webhook Simulator)" IsChecked="False" Margin="0,0,0,12" />

            <WrapPanel HorizontalAlignment="Right">
                <Button Name="BtnSave" Content="Save" Width="80" Margin="0,0,8,0" Click="BtnSave_Click" />
                <Button Name="BtnCancel" Content="Cancel" Width="80" Click="BtnCancel_Click" />
            </WrapPanel>
        </StackPanel>
    </Border>
</Window>
