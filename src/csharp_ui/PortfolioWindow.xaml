<Window x:Class="TradeSensei.UI.PortfolioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Portfolio Tracker" Height="750" Width="1000" WindowStartupLocation="CenterOwner">
    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="12" Padding="16" Margin="8">
        <StackPanel Orientation="Vertical" Margin="0">
            <TextBlock Text="Portfolio Tracker" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,12" />
            
            <!-- Statistics -->
            <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                <StackPanel Orientation="Vertical" Margin="0">
                    <TextBlock Text="Portfolio Statistics" FontSize="14" FontWeight="Bold" Margin="0,0,0,8" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="8">
                            <TextBlock Text="Open Positions" FontSize="12" />
                            <TextBox Name="TxtOpenPositions" Text="0" IsReadOnly="True" Background="#22FFFFFF" Foreground="White" />
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="8">
                            <TextBlock Text="Long / Short" FontSize="12" />
                            <StackPanel Orientation="Horizontal" Margin="0">
                                <TextBox Name="TxtLongPositions" Text="0" IsReadOnly="True" Width="40" Background="#22FFFFFF" Foreground="White" />
                                <TextBlock Text=" / " VerticalAlignment="Center" Margin="4,0,4,0" />
                                <TextBox Name="TxtShortPositions" Text="0" IsReadOnly="True" Width="40" Background="#22FFFFFF" Foreground="White" />
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Margin="8">
                            <TextBlock Text="Total Trades" FontSize="12" />
                            <TextBox Name="TxtTotalTrades" Text="0" IsReadOnly="True" Background="#22FFFFFF" Foreground="White" />
                        </StackPanel>
                        
                        <StackPanel Grid.Column="3" Margin="8">
                            <TextBlock Text="Win Rate" FontSize="12" />
                            <TextBox Name="TxtWinRate" Text="0%" IsReadOnly="True" Background="#22FFFFFF" Foreground="White" />
                        </StackPanel>
                    </Grid>
                    
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="8">
                            <TextBlock Text="Total P&amp;L" FontSize="12" />
                            <TextBox Name="TxtTotalPnL" Text="$0.00" IsReadOnly="True" Background="#22FFFFFF" Foreground="#00FF00" FontWeight="Bold" />
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="8">
                            <TextBlock Text="Profit Factor" FontSize="12" />
                            <TextBox Name="TxtProfitFactor" Text="0.00" IsReadOnly="True" Background="#22FFFFFF" Foreground="White" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Open Positions -->
            <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                <StackPanel Orientation="Vertical" Margin="0">
                    <TextBlock Text="Open Positions" FontSize="14" FontWeight="Bold" Margin="0,0,0,8" />
                    <ListBox Name="PositionsListBox" Height="150" Background="#11FFFFFF" Foreground="White" />
                </StackPanel>
            </Border>
            
            <!-- Add Position -->
            <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                <StackPanel Orientation="Vertical" Margin="0">
                    <TextBlock Text="Add New Position" FontSize="14" FontWeight="Bold" Margin="0,0,0,8" />
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Symbol:" VerticalAlignment="Center" />
                        <TextBox Name="TxtSymbol" Width="80" Padding="8" Background="#22FFFFFF" Foreground="White" Margin="0,0,8,0" />
                        
                        <TextBlock Text="Side:" VerticalAlignment="Center" Margin="16,0,0,0" />
                        <ComboBox Name="CmbSide" Width="100" Padding="8" Margin="0,0,16,0">
                            <ComboBoxItem Content="Long" />
                            <ComboBoxItem Content="Short" />
                        </ComboBox>
                        
                        <TextBlock Text="Entry Price:" VerticalAlignment="Center" Margin="16,0,0,0" />
                        <TextBox Name="TxtEntryPrice" Width="100" Padding="8" Background="#22FFFFFF" Foreground="White" Margin="0,0,8,0" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Quantity:" VerticalAlignment="Center" />
                        <TextBox Name="TxtQuantity" Width="80" Padding="8" Background="#22FFFFFF" Foreground="White" Margin="0,0,8,0" />
                        
                        <TextBlock Text="Stop Loss:" VerticalAlignment="Center" Margin="16,0,0,0" />
                        <TextBox Name="TxtStopLoss" Width="100" Padding="8" Background="#22FFFFFF" Foreground="White" Margin="0,0,8,0" />
                        
                        <TextBlock Text="Take Profit:" VerticalAlignment="Center" Margin="16,0,0,0" />
                        <TextBox Name="TxtTakeProfit" Width="100" Padding="8" Background="#22FFFFFF" Foreground="White" Margin="0,0,8,0" />
                    </StackPanel>
                    
                    <Button Name="BtnAddPosition" Content="Add Position" Width="120" Height="32" Click="BtnAddPosition_Click" 
                            Background="{StaticResource PrimaryBrush}" Foreground="White" Cursor="Hand" />
                </StackPanel>
            </Border>
            
            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                <Button Name="BtnRefresh" Content="ðŸ”„ Refresh" Width="100" Height="32" Click="BtnRefresh_Click" Margin="0,0,8,0"
                        Background="{StaticResource PrimaryBrush}" Foreground="White" Cursor="Hand" />
                <Button Name="BtnClose" Content="Close" Width="100" Height="32" Click="BtnClose_Click" 
                        Background="{StaticResource PrimaryBrush}" Foreground="White" Cursor="Hand" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
