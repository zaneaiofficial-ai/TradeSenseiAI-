<Window x:Class="TradeSensei.UI.SubscriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Subscription Details" Height="320" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="12" Padding="16" Margin="8">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Subscription Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,12" />

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Tier:" Width="100" />
                <TextBlock Name="TxtTier" Text="Free" FontWeight="Bold" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Premium:" Width="100" />
                <TextBlock Name="TxtPremium" Text="No" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Expiry:" Width="100" />
                <TextBlock Name="TxtExpiry" Text="N/A" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,18">
                <TextBlock Text="Next Billing:" Width="100" />
                <TextBlock Name="TxtNextBilling" Text="N/A" />
            </StackPanel>

            <WrapPanel HorizontalAlignment="Right">
                <Button Name="BtnRefresh" Content="Refresh" Width="80" Margin="0,0,8,0" Click="BtnRefresh_Click" />
                <Button Name="BtnUpgrade" Content="Upgrade" Width="100" Margin="0,0,8,0" Click="BtnUpgrade_Click" />
                <Button Name="BtnClose" Content="Close" Width="80" Click="BtnClose_Click" />
            </WrapPanel>
        </StackPanel>
    </Border>
</Window>
