<Window x:Class="TradeSensei.UI.VoiceChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Voice Chat with AI Mentor" Height="400" Width="500" WindowStartupLocation="CenterOwner">
    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="12" Padding="16" Margin="8">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Voice Chat with AI Mentor" FontSize="18" FontWeight="Bold" Margin="0,0,0,12" />

            <TextBlock Text="Status:" Margin="0,0,0,4" />
            <TextBlock Name="TxtStatus" Text="Ready" Foreground="{StaticResource FreeBrush}" FontWeight="Bold" Margin="0,0,0,12" />

            <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Your Message:" Margin="0,0,0,4" />
                    <TextBlock Name="TxtTranscription" Text="(Waiting for input...)" Foreground="{StaticResource AccentBrush}" TextWrapping="Wrap" Height="60" />
                </StackPanel>
            </Border>

            <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="AI Response:" Margin="0,0,0,4" />
                    <TextBlock Name="TxtResponse" Text="(Waiting for response...)" Foreground="{StaticResource AccentBrush}" TextWrapping="Wrap" Height="80" />
                </StackPanel>
            </Border>

            <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Or type a question:" Margin="0,0,0,4" />
                    <TextBox Name="TxtManualPrompt" Text="" TextWrapping="Wrap" AcceptsReturn="True" Height="60" />
                    <Button Name="BtnSendManual" Content="Send Question" Width="140" Height="36" HorizontalAlignment="Right" Margin="0,8,0,0" Click="BtnSendManual_Click" />
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                <TextBlock Text="Recording:" VerticalAlignment="Center" Margin="0,0,8,0" />
                <Ellipse Name="EltRecordingIndicator" Width="20" Height="20" Fill="{StaticResource FreeBrush}" />
            </StackPanel>

            <WrapPanel HorizontalAlignment="Center">
                <Button Name="BtnTalkToMentor" Content="ðŸŽ¤ Talk to Mentor (Hold)" Width="160" Height="48" Margin="0,0,8,0" />
                <Button Name="BtnPlayResponse" Content="ðŸ”Š Play Response" Width="140" Height="48" Margin="0,0,8,0" Click="BtnPlayResponse_Click" />
                <Button Name="BtnClose" Content="Close" Width="100" Height="48" Click="BtnClose_Click" />
            </WrapPanel>

            <TextBlock Text="Tip: Hold the 'Talk to Mentor' button while speaking, release to submit." FontSize="11" Foreground="#FF888888" Margin="0,12,0,0" TextWrapping="Wrap" HorizontalAlignment="Center" />
        </StackPanel>
    </Border>
</Window>
