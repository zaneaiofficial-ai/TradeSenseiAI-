<Window x:Class="TradeSensei.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In" Height="260" Width="400" WindowStartupLocation="CenterOwner"
        Background="{StaticResource SecondaryBrush}" ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="14" Padding="28" Margin="12">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="logo.svg" Width="48" Height="48" Margin="0,0,0,10" HorizontalAlignment="Center" />
            <TextBlock Text="Sign in to TradeSensei" FontSize="20" FontWeight="Bold" Margin="0,0,0,16" HorizontalAlignment="Center" />
            <TextBlock Text="Email" Margin="0,0,0,2" />
            <TextBox Name="TxtEmail" Height="28" Margin="0,0,0,12" Width="260" />
            <TextBlock Text="Password" Margin="0,0,0,2" />
            <PasswordBox Name="TxtPassword" Height="28" Margin="0,0,0,12" Width="260" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Name="BtnCancel" Content="Cancel" Width="80" Margin="0,0,8,0" Click="BtnCancel_Click" />
                <Button Name="BtnSignin" Content="Sign In" Width="100" Click="BtnSignin_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
