<Window x:Class="TradeSensei.UI.WebhookSimulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Webhook Simulator (Dev)" Height="280" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Border Background="{StaticResource PrimaryBrush}" CornerRadius="12" Padding="16" Margin="8">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Webhook Simulator (Dev Only)" FontSize="16" FontWeight="Bold" Margin="0,0,0,12" Foreground="#FFFF6B6B" />

            <TextBlock Text="User ID:" Margin="0,0,0,2" />
            <TextBox Name="TxtUserId" Height="28" Margin="0,0,0,12" />

            <TextBlock Text="Tier:" Margin="0,0,0,2" />
            <ComboBox Name="CmbTier" Height="28" Margin="0,0,0,12">
                <ComboBoxItem>free</ComboBoxItem>
                <ComboBoxItem>pro</ComboBoxItem>
                <ComboBoxItem IsSelected="True">master</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Amount (USD):" Margin="0,0,0,2" />
            <TextBox Name="TxtAmount" Height="28" Text="9.99" Margin="0,0,0,12" />

            <TextBlock Text="Status:" Margin="0,0,0,2" />
            <TextBlock Name="TxtStatus" Text="Ready" Margin="0,0,0,12" />

            <WrapPanel HorizontalAlignment="Right">
                <Button Name="BtnSimulate" Content="Simulate Payment" Width="120" Margin="0,0,8,0" Click="BtnSimulate_Click" />
                <Button Name="BtnClose" Content="Close" Width="80" Click="BtnClose_Click" />
            </WrapPanel>
        </StackPanel>
    </Border>
</Window>
